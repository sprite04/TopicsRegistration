@using DOAN.Models;
@model IEnumerable<CAUHINH>

@{
    ViewBag.Title = "LoaiDeTaiTheoNienKhoaCuaTungGV";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}


@section header{
    <div class="col-sm-6">
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Trang chu</a></li>
            <li class="breadcrumb-item">Quan li de tai</li>
        </ol>
    </div>
}

@section script{
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
        $(".DeleteId").prepend("<i class='far fa-trash-alt'></i>");

    </script>
}

<!-- Main content -->

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Danh sách loại đề tài</h3>
                        @if (Model.Any(x => x.Active == true && (DateTime.Compare(DateTime.Now, x.ThoiGianGVBatDauDK ?? DateTime.Now) >= 0 && DateTime.Compare(DateTime.Now, x.ThoiGianGVKetThucDK ?? DateTime.Now) <= 0)))
                        {
                            <a class="btn btn-success float-right" href="@Url.Action("TaoDeTai","QLDeTai")">
                                Tạo đề tài
                            </a>
                        }
                    </div>

                    <!-- /.card-header -->
                    <div class="card-body">
                        <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-hover table-bordered">
                                        <thead>
                                            <tr>
                                                <th>STT</th>
                                                <th>Loại đề tài</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                int i = 1;
                                            }
                                            @foreach (var item in Model)
                                            {
                                                <tr id="row1_@item.IdCauHinh">
                                                    <td>
                                                        <span>@i</span>
                                                    </td>
                                                    <td>
                                                        <a href="@Url.Action("DanhSachDeTaiCuaTungGV","QLDeTai",new { id=item.IdCauHinh})">
                                                            <span>@Url.Content(item.LOAIDETAI.TenLoai + " | " + item.NIENKHOA1.TenNK + " (" + item.NIENKHOA1.NamBD + "-" + item.NIENKHOA1.NamKT + ") " + " | Học kỳ " + item.HocKy + " (" + item.NamHocBatDauHocKy + "-" + item.NamHocKetThucHocKy + ") ")</span>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>