@using DOAN.Models;
@model DETAI
@{
    ViewBag.Title = "TaoDeTai";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}



@section header{
    <div class="col-sm-6">
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chu</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","QLDeTai")">De tai</a></li>
            <li class="breadcrumb-item">Them</li>
        </ol>
    </div>
}

@section script{
    <script type="text/javascript">
        function fileCheck(obj) {
            var fileExtension = ['jpeg', 'jpg', 'png', 'gif', 'bmp'];
            if ($.inArray($(obj).val().split('.').pop().toLowerCase(), fileExtension) == -1) {
                alert("Only '.jpeg','.jpg', '.png', '.gif', '.bmp' formats are allowed.");
            }
        }

        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>

}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1"></div>
            <!-- left column -->
            <div class="col-md-10">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Thêm</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("TaoDeTai", "QLDeTai"))
                    {
                        @Html.AntiForgeryToken()

                        <div class="card-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">

                                @Html.LabelFor(model => model.TenDeTai, htmlAttributes: new { @for = "inputName" })
                                @Html.TextBoxFor(model => model.TenDeTai, new { @type = "text", @class = "form-control", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.TenDeTai, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SanPham, htmlAttributes: new { @for = "inputName" })
                                @Html.TextBoxFor(model => model.SanPham, new { @type = "text", @class = "form-control", @autofocus = "autofocus" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.MucTieu, htmlAttributes: new { @for = "inputName" })
                                @Html.TextAreaFor(model => model.MucTieu, new { @class = "form-control area", @rows = "5"})
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.YeuCau, htmlAttributes: new { @for = "inputName" })
                                @Html.TextAreaFor(model => model.YeuCau, new { @class = "form-control area", @rows = "5" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ChuThich, htmlAttributes: new { @for = "inputName" })
                                @Html.TextAreaFor(model => model.ChuThich, new { @class = "form-control area", @rows = "5" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ThoiGianBDBaoVe, htmlAttributes: new { @for = "inputBD" })
                                @Html.TextBoxFor(model => model.ThoiGianBDBaoVe, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", @id = "inputBD" })
                                @Html.ValidationMessageFor(model => model.ThoiGianBDBaoVe, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ThoiGianKTBaoVe, htmlAttributes: new { @for = "inputBD" })
                                @Html.TextBoxFor(model => model.ThoiGianKTBaoVe, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", @id = "inputBD" })
                                @Html.ValidationMessageFor(model => model.ThoiGianKTBaoVe, "", new { @class = "text-danger" })
                            </div>

                             <div class="form-group">
                                @Html.LabelFor(model => model.ChuyenNganh)
                                @Html.DropDownList("ChuyenNganh",ViewBag.ChuyenNganh as SelectList, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ChuyenNganh, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.CauHinh)
                                @Html.DropDownList("CauHinh",ViewBag.CauHinh as SelectList, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CauHinh, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.Label("Được đăng ký khác chuyên ngành ", htmlAttributes: new { @class = "mr-3" })
                                <input type="checkbox" name="dkkcn" value="1" />
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SoLuongSV, htmlAttributes: new { @for = "inputName" })
                                @Html.TextBoxFor(model => model.SoLuongSV, new { @type = "number", @class = "form-control", @id = "inputName", @placeholder = "Unit", @autofocus = "autofocus", @min=1,@max=3,@value=2 })
                                @Html.ValidationMessageFor(model => model.SoLuongSV, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary float-right">Lưu</button>
                        </div>
                    }
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>



