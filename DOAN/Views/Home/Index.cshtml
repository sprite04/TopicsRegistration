
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}


@section header{
    <div class="col-sm-6">
    </div><!-- /.col -->
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item mr-2">Trang chu</li>
        </ol>
    </div><!-- /.col -->
}

@section style{

    <script src="~/Scripts/Chart.min.js"></script>

    <script src="~/Scripts/jquery-1.8.0.min.js"></script>

}

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@ViewBag.ThongBao</h3>

                        <p>Thông báo</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="@Url.Action("Index","QLThongBao")" class="small-box-footer">Xem <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@ViewBag.GiaoVien<sup style="font-size: 20px"></sup></h3>

                        <p>Giáo viên</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer">Xem<i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@ViewBag.SinhVien</h3>

                        <p>Sinh viên</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="#" class="small-box-footer">Xem <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@ViewBag.DeTai</h3>

                        <p>Đề tài</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="#" class="small-box-footer">Xem <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
        <div class="container-fluid m-0 p-0">
            <div class="row">
                <div class="col-6">
                    <div class="card">
                        <div class="card-header ui-sortable-handle" style="cursor: move;">
                            <h3 class="card-title">
                                <i class="fas fa-chart-pie mr-1"></i>
                                Thống kê
                            </h3>
                            <div class="card-tools">
                                
                            </div>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                <div class="row">
                                    <div class="col-sm-12">
                                        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()

                                                <div class="form-group">
                                                    <label class="col-sm-3 control-label m-0 p-0">Loại đề tài</label>
                                                    <div class="col-sm-8 d-inline-block">
                                                        @Html.DropDownList("ddlCauHinh", ViewBag.items as SelectList, "Chọn loại đề tài", new { @class = "form-control", @onchange = "this.form.submit();" })
                                                    </div>
                                                </div>

                                            if (ViewBag.GiaTri != 0)
                                            {
                                                <div>
                                                    <div class="chart_container text-center">
                                                        <canvas id="chartjs-4" class="chartjs mb-5"  display: block">
                                                        </canvas>
                                                        <script>
                                                        var values =@Html.Raw(Json.Encode(ViewBag.Value));
                                                        var labels =@Html.Raw(Json.Encode(ViewBag.Label));
                                                        new Chart(document.getElementById("chartjs-4"), { "type": "pie", "data": { "labels": labels, "datasets": [{ "label": "My First Dataset", "data": values, "backgroundColor": ["rgb(255, 99, 132)", "rgb(54, 162, 235)", "rgb(255, 205, 86)"] }] } });
                                                        </script>
                                                    </div>
                                                </div>

                                            }

                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>

                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
