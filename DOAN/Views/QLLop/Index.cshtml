@using DOAN.Models
@model IEnumerable<LOP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}


@section header{
    <div class="col-sm-6">
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chu</a></li>
            <li class="breadcrumb-item active">Lop</li>
        </ol>
    </div>
}

@section script{
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
        $(".DeleteId").prepend("<i class='far fa-trash-alt'></i>");

    </script>
}

<!-- Main content -->

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Lớp</h3>
                        <!-- Button trigger modal -->
                        <a class="btn btn-success float-right" href="@Url.Action("Create","QLLop")">
                            Thêm
                        </a>

                    </div>


                    <!-- /.card-header -->
                    <div class="card-body">
                        <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" role="grid" aria-describedby="example1_info">
                                        <thead>
                                            <tr>
                                                <th>@Html.DisplayNameFor(model => model.TenLop)</th>
                                                <th>@Html.DisplayNameFor(model => model.NIENKHOA.TenNK)</th>
                                                <th>Thêm sinh viên</th>
                                                <th>Danh sách sinh viên</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr id="row1_@item.IdLop">
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TenLop)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.NIENKHOA.TenNK)
                                                    </td>
                                                    <td>
                                                        <div class="btn-group btn-group-sm">
                                                            <a class="btn btn-success" href="@Url.Action("NhapLop","QLLop",new { id=item.IdLop })">
                                                                <i class="fa fa-plus"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group btn-group-sm">
                                                            <a class="btn btn-info" href="@Url.Action("HienThiDSLop","QLLop",new { id=item.IdLop })">
                                                                <i class="fa fa-eye"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group btn-group-sm">
                                                            <a class="btn btn-info" href="@Url.Action("Edit","QLLop",new { id=item.IdLop })">
                                                                <i class="fas fa-pencil-alt"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                    
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>

