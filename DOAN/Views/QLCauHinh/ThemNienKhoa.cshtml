@using DOAN.Models;
@model NIENKHOA

@{
    ViewBag.Title = "ThemNienKhoa";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}



@section header{
    <div class="col-sm-6">
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Trang chu</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","QLCauHinh")">Cau hinh</a></li>
            <li class="breadcrumb-item">Them</li>
        </ol>
    </div>
}

@section script{
    <script type="text/javascript">
       
    </script>

}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1"></div>
            <!-- left column -->
            <div class="col-md-10">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Thêm</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("ThemNienKhoa", "QLCauHinh", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="card-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            
                            <div class="form-group">
                                @Html.LabelFor(model => model.TenNK, htmlAttributes: new { @for = "inputName" })
                                @Html.TextBoxFor(model => model.TenNK, new { @type = "text", @class = "form-control", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.TenNK, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NamBD, htmlAttributes: new { @for = "inputName" })
                                @Html.TextBoxFor(model => model.NamBD, new { @type = "text", @class = "form-control", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.NamBD, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NamKT, htmlAttributes: new { @for = "inputName" })
                                @Html.TextBoxFor(model => model.NamKT, new { @type = "text", @class = "form-control", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.NamKT, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary float-right">Lưu</button>
                        </div>
                    }
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>