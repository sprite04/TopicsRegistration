@using DOAN.Models;
@model CAUHINH

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}



@section header{
    <div class="col-sm-6">
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Trang chu</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","QLCauHinh")">Cau hinh</a></li>
            <li class="breadcrumb-item">Them</li>
        </ol>
    </div>
}

@section script{
    <script type="text/javascript">
        function fileCheck(obj) {
            var fileExtension = ['jpeg', 'jpg', 'png', 'gif', 'bmp'];
            if ($.inArray($(obj).val().split('.').pop().toLowerCase(), fileExtension) == -1) {
                alert("Only '.jpeg','.jpg', '.png', '.gif', '.bmp' formats are allowed.");
            }
        }

        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>

}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1"></div>
            <!-- left column -->
            <div class="col-md-10">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Thêm</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("Create", "QLCauHinh", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="card-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.LoaiDT)
                                @Html.DropDownList("LoaiDT", ViewBag.LoaiDeTai as SelectList, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LoaiDT, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NienKhoa)
                                @Html.DropDownList("NienKhoa", ViewBag.NienKhoa as SelectList, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NienKhoa, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NamHocBatDauHocKy, htmlAttributes: new { @for = "inputName" })
                                @Html.TextBoxFor(model => model.NamHocBatDauHocKy, new { @type = "number", @class = "form-control", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.NamHocBatDauHocKy, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NamHocKetThucHocKy, htmlAttributes: new { @for = "inputName" })
                                @Html.TextBoxFor(model => model.NamHocKetThucHocKy, new { @type = "number", @class = "form-control",  @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.NamHocKetThucHocKy, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.HocKy, htmlAttributes: new { @for = "inputName" })
                                @Html.TextBoxFor(model => model.HocKy, new { @type = "number", @class = "form-control",@max="3",@min="1", @value="1" })
                                @Html.ValidationMessageFor(model => model.HocKy, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SoLuongSVToiDa, htmlAttributes: new { @for = "inputName" })
                                @Html.TextBoxFor(model => model.SoLuongSVToiDa, new { @type = "number", @class = "form-control",  @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.SoLuongSVToiDa, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ThoiGianGVBatDauDK, htmlAttributes: new { @for = "inputBD" })
                                @Html.TextBoxFor(model => model.ThoiGianGVBatDauDK, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control"})
                                @Html.ValidationMessageFor(model => model.ThoiGianGVBatDauDK, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ThoiGianGVKetThucDK, htmlAttributes: new { @for = "inputBD" })
                                @Html.TextBoxFor(model => model.ThoiGianGVKetThucDK, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ThoiGianGVKetThucDK, "", new { @class = "text-danger" })
