@using DOAN.Models;
@model CAUHINH

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}


@section header{
    <div class="col-sm-6">
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Trang chu</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","QLCauHinh")">Cau hinh</a></li>
            <li class="breadcrumb-item">Sua</li>
        </ol>
    </div>
}

@section script{
    <script type="text/javascript">
        function fileCheck(obj) {
            var fileExtension = ['jpeg', 'jpg', 'png', 'gif', 'bmp'];
            if ($.inArray($(obj).val().split('.').pop().toLowerCase(), fileExtension) == -1) {
                alert("Only '.jpeg','.jpg', '.png', '.gif', '.bmp' formats are allowed.");
            }
        }

        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>

}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1"></div>
            <!-- left column -->
            <div class="col-md-10">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Sửa</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("Edit", "QLCauHinh", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.IdCauHinh)
                        @Html.HiddenFor(model => model.Active)
                        @Html.HiddenFor(model => model.DateUpdate)
                        @Html.HiddenFor(model => model.LoaiDT)
                        @Html.HiddenFor(model => model.NienKhoa)
                        @Html.HiddenFor(model => model.HocKy)
                        @Html.HiddenFor(model => model.NamHocBatDauHocKy)
                        @Html.HiddenFor(model => model.NamHocKetThucHocKy)
                        @Html.HiddenFor(model => model.NguoiTao)
                        <div class="card-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(model => model.SoLuongSVToiDa, htmlAttributes: new { @for = "inputName" })
                                @Html.TextBoxFor(model => model.SoLuongSVToiDa, new { @type = "number", @class = "form-control", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.SoLuongSVToiDa, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ThoiGianGVBatDauDK, htmlAttributes: new { @for = "inputBD" })
                                @Html.TextBoxFor(model => model.ThoiGianGVBatDauDK, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ThoiGianGVBatDauDK, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ThoiGianGVKetThucDK, htmlAttributes: new { @for = "inputBD" })
                                @Html.TextBoxFor(model => model.ThoiGianGVKetThucDK, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ThoiGianGVKetThucDK, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ThoiGianBatDauDuyet, htmlAttributes: new { @for = "inputBD" })
                                @Html.TextBoxFor(model => model.ThoiGianBatDauDuyet, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ThoiGianBatDauDuyet, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ThoiGianKetThucDuyet, htmlAttributes: new { @for = "inputBD" })
                                @Html.TextBoxFor(model => model.ThoiGianKetThucDuyet, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ThoiGianKetThucDuyet, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ThoiGianBatDauDK, htmlAttributes: new { @for = "inputBD" })
                                @Html.TextBoxFor(model => model.ThoiGianBatDauDK, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ThoiGianBatDauDK, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ThoiGianKetThucDK, htmlAttributes: new { @for = "inputBD" })
                                @Html.TextBoxFor(model => model.ThoiGianKetThucDK, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ThoiGianKetThucDK, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ThoiGianSVBatDauNopBC, htmlAttributes: new { @for = "inputBD" })
                                @Html.TextBoxFor(model => model.ThoiGianSVBatDauNopBC, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ThoiGianSVBatDauNopBC, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ThoiGianSVKetThucNopBC, htmlAttributes: new { @for = "inputBD" })
                                @Html.TextBoxFor(model => model.ThoiGianSVKetThucNopBC, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ThoiGianSVKetThucNopBC, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary float-right">Lưu</button>
                        </div>
                    }
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
