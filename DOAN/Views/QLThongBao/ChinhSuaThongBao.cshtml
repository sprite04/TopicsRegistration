@using DOAN.Models;
@model THONGBAO
@{
    ViewBag.Title = "ChinhSuaThongBao";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}



@section header{
    <div class="col-sm-6">
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Trang chu</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","QLNguoiDung")">Sinh vien</a></li>
            <li class="breadcrumb-item">Them</li>
        </ol>
    </div>
}

@section script{


}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1"></div>
            <!-- left column -->
            <div class="col-md-10">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Thêm</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("ChinhSuaThongBao", "QLThongBao"))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.IdTB)
                        @Html.HiddenFor(model => model.NgayDang)
                        @Html.HiddenFor(model => model.CoTinMoi)
                        @Html.HiddenFor(model => model.IsDelete)
                        @Html.HiddenFor(model => model.NguoiDang)

                        <div class="card-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">

                                @Html.LabelFor(model => model.TenTB, htmlAttributes: new { @for = "inputName" })
                                @Html.TextBoxFor(model => model.TenTB, new { @type = "text", @class = "form-control", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.TenTB, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.SoNgayHienThi, htmlAttributes: new { @for = "inputName" })
                                @Html.TextBoxFor(model => model.SoNgayHienThi, new { @type = "number", @class = "form-control", @id = "inputName", @placeholder = "Unit", @autofocus = "autofocus", @min = 1, @max = 3, @value = 2 })
                                @Html.ValidationMessageFor(model => model.SoNgayHienThi, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NoiDung, htmlAttributes: new { @for = "inputName" })
                                @Html.TextAreaFor(model => model.NoiDung, new { @class = "form-control area", @rows = "20" })
                            </div>


                        </div>

                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary float-right">Lưu</button>
                        </div>
                    }
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>