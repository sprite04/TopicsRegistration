@using DOAN.Models
@model IEnumerable<NGUOIDUNG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
    var user = Session["TaiKhoan"] as NGUOIDUNG;
}


@section header{
    <div class="col-sm-6">
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chu</a></li>
            <li class="breadcrumb-item">Sinh vien</li>
        </ol>
    </div>
}

@section script{
    <script type="text/javascript">
        function fileCheck(obj) {
            var fileExtension = ['xls', 'xlsx', 'xlsm'];
            if ($.inArray($(obj).val().split('.').pop().toLowerCase(), fileExtension) == -1) {
                alert("Only '.xls','.xlsx', '.xlsm' formats are allowed.");
            }
        }

        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
        $(".DeleteId").prepend("<i class='far fa-trash-alt'></i>");
        $('.alert').alert()
    </script>
}

<!-- Main content -->

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                @if (ViewBag.Error == 1)
                {
                    <div class="alert alert-warning ">
                        Vui lòng lựa chọn file excel
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                else if (ViewBag.Error == 2)
                {
                    <div class="alert alert-warning">
                        Quá trình thực hiện thất bại
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                else if (ViewBag.Error == 3)
                {
                    <div class="alert alert-warning">
                        Loại file không chính xác
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                else if (ViewBag.Error == -1)
                {
                    <div class="alert alert-success">
                        Quá trình thực hiện thành công
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }

                @if (user != null && user.IdUT == 5)
                {
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Import</h3>

                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                <div class="row">
                                    <div class="col-sm-12">
                                        @using (Html.BeginForm("Import", "QLNguoiDung", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                        {
                                            <div class="form-group">
                                                <label class="col-sm-1 control-label m-0 p-0">Excel File</label>
                                                <div class="col-sm-5 d-inline-block">
                                                    @Html.Label("excelfile", "Choose File", new { @for = "excelfile", @class = "custom-file-label" })
                                                    <input class="custom-file-input" type="file" name="excelfile" id="excelfile" onchange="fileCheck(this);" />

                                                </div>
                                                <div class="col-sm-5 d-inline-block" style="top:4px">
                                                    <input class="input-group-text" value="Save" type="submit" id="">
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                }

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Sinh viên</h3>
                        @if (user != null && user.IdUT == 5)
                        {
                            <a class="btn btn-success float-right" href="@Url.Action("Create","QLNguoiDung")">
                                Thêm
                            </a>
                        }
                    </div>

                    <!-- /.card-header -->
                    <div class="card-body">
                        <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" role="grid" aria-describedby="example1_info">
                                        <thead>
                                            <tr>
                                                <th><span>MSSV</span></th>
                                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                                <th>@Html.DisplayNameFor(model => model.Phone)</th>
                                                <th>@Html.DisplayNameFor(model => model.CHUYENNGANH1.TenCNganh)</th>
                                                @if (user != null && user.IdUT == 5)
                                                {
                                                    <th></th>
                                                }
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                if (item.ChucVu == 1)
                                                {
                                                    <tr id="row1_@item.IdUser">
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Username)
                                                        </td>
                                                        <td>
                                                            <a href="@Url.Action("ChiTietNguoiDung","QLNguoiDung",new { id=item.IdUser})">
                                                                @Html.DisplayFor(modelItem => item.Name)
                                                            </a>
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Phone)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.CHUYENNGANH1.TenCNganh)
                                                        </td>
                                                        @if(user!=null && user.IdUT==5)
                                                        {
                                                            <td>
                                                            <div class="btn-group btn-group-sm">
                                                                <a class="btn btn-info" href="@Url.Action("Edit","QLNguoiDung",new { id=item.IdUser })">
                                                                    <i class="fas fa-pencil-alt"></i>
                                                                </a>

                                                                @Ajax.ActionLink(" ", "Delete", "QLNguoiDung", new { id = item.IdUser }, new AjaxOptions { Confirm = "Bạn có muốn xoá người dùng này?", OnComplete = "$('#row1_" + @item.IdUser + "').remove()", HttpMethod = "Post" }, new { @class = "btn btn-danger DeleteId" })

                                                            </div>

                                                        </td>
                                                        }
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>