@using DOAN.Models;
@model NGUOIDUNG

@{
    ViewBag.Title = "CreateGV";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}


@section header{
    <div class="col-sm-6">
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","NguoiDung")">Giang vien</a></li>
            <li class="breadcrumb-item active">Them</li>
        </ol>
    </div>
}

@section script{
    <script type="text/javascript">
        function fileCheck(obj) {
            var fileExtension = ['jpeg', 'jpg', 'png', 'gif', 'bmp'];
            if ($.inArray($(obj).val().split('.').pop().toLowerCase(), fileExtension) == -1) {
                alert("Only '.jpeg','.jpg', '.png', '.gif', '.bmp' formats are allowed.");
            }
        }

        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>

}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1"></div>
            <!-- left column -->
            <div class="col-md-10">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Thêm</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("CreateGV", "QLNguoiDung", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="card-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @for = "inputName" })
                                @Html.TextBoxFor(model => model.Name, new { @type = "text", @class = "form-control", @id = "inputName", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label>Tên đăng nhập</label>
                                @Html.TextBoxFor(model => model.Username, new { @type = "text", @class = "form-control", @id = "inputName", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @for = "inputMail" })
                                @Html.TextBoxFor(model => model.Email, new { @type = "text", @class = "form-control", @id = "inputMail", @placeholder = "Mail" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="exampleInputFile">Avatar</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        @Html.LabelFor(model => model.Avatar, "Choose File", new { @for = "Avatar", @class = "custom-file-label" })
                                        <input class="custom-file-input" type="file" name="Avatar" id="Avatar" onchange="fileCheck(this);" />
                                        @Html.ValidationMessageFor(model => model.Avatar, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NgaySinh, htmlAttributes: new { @for = "inputBD" })
                                @Html.TextBoxFor(model => model.NgaySinh, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", @id = "inputBD" })
                                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.GioiTinh, htmlAttributes: new { @for = "inputSex", @class = "mr-3" })
                                @Html.EditorFor(model => model.GioiTinh)
                                @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Phone, htmlAttributes: new { @for = "inputPhone" })
                                @Html.TextBoxFor(model => model.Phone, new { @type = "text", @class = "form-control", @id = "inputPhone" })
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.HocVi, htmlAttributes: new { @for = "inputPhone" })
                                @Html.TextBoxFor(model => model.HocVi, new { @type = "text", @class = "form-control", @id = "inputPhone" })
                                @Html.ValidationMessageFor(model => model.HocVi, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ChucVu)
                                @Html.DropDownList("ChucVu", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ChucVu, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ChuyenNganh)
                                @Html.DropDownList("ChuyenNganh", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ChuyenNganh, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Admin", htmlAttributes: new { @for = "inputAdmin", @class = "mr-3" })
                                <input type="checkbox" checked="checked" name="admin" value="1" />
                            </div>
                        </div>

                        

                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary float-right">Lưu</button>
                        </div>
                    }
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

